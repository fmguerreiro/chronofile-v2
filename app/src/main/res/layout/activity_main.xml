<?xml version="1.0" encoding="utf-8" ?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  android:background="?attr/colorSurface"
  android:fitsSystemWindows="true"
  tools:context="com.chaidarun.chronofile.MainActivity"
>
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="72dp"
    android:clipToPadding="false"
  >
    
    <!-- Activity Recommendations Bar -->
    <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginVertical="8dp"
      android:scrollbars="none"
    >
      <com.google.android.material.chip.ChipGroup
        android:id="@+id/frequentActivitiesChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:singleLine="true"
        app:chipSpacing="12dp"
      />
    </HorizontalScrollView>
    
    <!-- Date Navigation Header -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:padding="8dp"
      android:background="?attr/colorSurface"
    >
      <com.google.android.material.button.MaterialButton
        android:id="@+id/previousDayButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="‹"
        android:textSize="20sp"
        android:textStyle="bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        style="@style/Widget.Material3.Button.IconButton"
        app:cornerRadius="20dp"
      />
      
      <TextView
        android:id="@+id/currentDateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Today"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textStyle="bold"
        android:gravity="center"
      />
      
      <com.google.android.material.button.MaterialButton
        android:id="@+id/nextDayButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="›"
        android:textSize="20sp"
        android:textStyle="bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        style="@style/Widget.Material3.Button.IconButton"
        app:cornerRadius="20dp"
      />
    </LinearLayout>
    
    <!-- Activity Suggestion Card -->
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/activitySuggestionCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginBottom="8dp"
      android:visibility="gone"
      app:cardCornerRadius="16dp"
      app:cardElevation="3dp"
      app:cardBackgroundColor="?attr/colorSecondaryContainer"
      style="?attr/materialCardViewElevatedStyle"
    >
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
      >
        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
        >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested Activity"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:alpha="0.8"
          />
          
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
          >
            <TextView
              android:id="@+id/suggestedActivityText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?attr/textAppearanceTitleMedium"
              android:textColor="?attr/colorOnSecondaryContainer"
              android:textStyle="bold"
              android:text="Work"
            />
            
            <TextView
              android:id="@+id/suggestionConfidenceText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:textAppearance="?attr/textAppearanceLabelSmall"
              android:textColor="?attr/colorOnSecondaryContainer"
              android:alpha="0.7"
              android:text="85% confidence"
            />
          </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
        >
          <com.google.android.material.button.MaterialButton
            android:id="@+id/dismissSuggestionButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="✕"
            android:textSize="16sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="@style/Widget.Material3.Button.TextButton"
            app:cornerRadius="20dp"
          />
          
          <com.google.android.material.button.MaterialButton
            android:id="@+id/acceptSuggestionButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Start"
            android:textColor="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.Material3.Button"
          />
        </LinearLayout>
      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    
    <androidx.core.widget.NestedScrollView
      android:layout_height="0dp"
      android:layout_width="match_parent"
      android:layout_weight="1"
    >
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="vertical"
    >
      <!-- Permission Banners -->
      <com.google.android.material.card.MaterialCardView
        android:id="@+id/changeSaveDirBanner"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorErrorContainer"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
      >
        <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:padding="16dp"
        >
          <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnErrorContainer"
            android:text="Choose a save directory. Otherwise your logged activities will be lost upon exit!"
          />
          <com.google.android.material.button.MaterialButton
            android:id="@+id/changeSaveDirButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Setup"
            style="@style/Widget.Material3.Button.TonalButton"
          />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
      
      <com.google.android.material.card.MaterialCardView
        android:id="@+id/grantLocationBanner"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorTertiaryContainer"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
      >
        <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:padding="16dp"
        >
          <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnTertiaryContainer"
            android:text="Grant location permissions to record where your activities happen."
          />
          <com.google.android.material.button.MaterialButton
            android:id="@+id/grantLocationButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Grant"
            style="@style/Widget.Material3.Button.TonalButton"
          />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
      
      <!-- Timeline RecyclerView -->
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical"
      />
      
      <!-- Pattern Insights Section -->
      <LinearLayout
        android:id="@+id/patternInsightsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
      >
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Pattern Insights"
          android:textAppearance="?attr/textAppearanceHeadlineSmall"
          android:textStyle="bold"
          android:fontFamily="@font/epilogue"
          android:layout_marginBottom="12dp"
        />
        
        <TextView
          android:id="@+id/patternInsightsText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="You've been most productive between 9 AM and 12 PM. Your day is balanced with a good mix of work and relaxation."
          android:textAppearance="?attr/textAppearanceBodyMedium"
          android:lineSpacingExtra="4dp"
          android:layout_marginBottom="16dp"
        />
        
        <!-- Activity Frequency Chart -->
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Activity Frequency"
          android:textAppearance="?attr/textAppearanceBodyMedium"
          android:textStyle="bold"
          android:layout_marginBottom="8dp"
        />
        
        <com.chaidarun.chronofile.ActivityFrequencyChartView
          android:id="@+id/activityFrequencyChart"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:paddingHorizontal="8dp"
          android:background="@drawable/chart_background"
        />
        
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="4dp"
          android:paddingHorizontal="8dp"
        >
          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="start"
          />
          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="08"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
          />
          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="16"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
          />
          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="end"
          />
        </LinearLayout>
      </LinearLayout>
      
      <!-- Day Summary Section -->
      <LinearLayout
        android:id="@+id/daySummarySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
      >
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Day Summary"
          android:textAppearance="?attr/textAppearanceHeadlineSmall"
          android:textStyle="bold"
          android:fontFamily="@font/epilogue"
          android:layout_marginBottom="16dp"
        />
        
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:padding="16dp"
        >
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work/Life Balance"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:layout_marginEnd="8dp"
          />
          
          <TextView
            android:id="@+id/balanceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7/10"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
          />
        </LinearLayout>
      </LinearLayout>
      
      <!-- Yesterday vs Today Section -->
      <LinearLayout
        android:id="@+id/comparisonSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_marginBottom="32dp"
      >
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Yesterday vs Today"
          android:textAppearance="?attr/textAppearanceHeadlineSmall"
          android:textStyle="bold"
          android:fontFamily="@font/epilogue"
          android:layout_marginBottom="16dp"
        />
        
        <!-- Activity Count Comparison -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginBottom="12dp"
        >
          <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_list_check"
            app:tint="#666666"
            android:layout_marginEnd="16dp"
          />
          
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
          >
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Activity Count"
              android:textAppearance="?attr/textAppearanceBodyLarge"
            />
            
            <TextView
              android:id="@+id/activityCountComparison"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12 today, 8 yesterday (+4)"
              android:textAppearance="?attr/textAppearanceBodyMedium"
              android:textColor="?attr/colorOnSurfaceVariant"
            />
          </LinearLayout>
        </LinearLayout>
        
        <!-- Total Time Comparison -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginBottom="12dp"
        >
          <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_time_line"
            app:tint="#666666"
            android:layout_marginEnd="16dp"
          />
          
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
          >
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Active Hours"
              android:textAppearance="?attr/textAppearanceBodyLarge"
            />
            
            <TextView
              android:id="@+id/activeHoursComparison"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="14.2hr today, 12.8hr yesterday (+1.4hr)"
              android:textAppearance="?attr/textAppearanceBodyMedium"
              android:textColor="?attr/colorOnSurfaceVariant"
            />
          </LinearLayout>
        </LinearLayout>
        
        <!-- Start Time Comparison -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
        >
          <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sun_line"
            app:tint="#666666"
            android:layout_marginEnd="16dp"
          />
          
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
          >
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Day Start"
              android:textAppearance="?attr/textAppearanceBodyLarge"
            />
            
            <TextView
              android:id="@+id/dayStartComparison"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="7:30 AM today, 8:15 AM yesterday (45min earlier)"
              android:textAppearance="?attr/textAppearanceBodyMedium"
              android:textColor="?attr/colorOnSurfaceVariant"
            />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
  </LinearLayout>
  
  <!-- Add Entry FAB -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/addEntryFab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="88dp"
    app:srcCompat="@android:drawable/ic_input_add"
    app:tint="?attr/colorOnPrimary"
    app:backgroundTint="?attr/colorPrimary"
  />
  
  <!-- Bottom Navigation Bar -->
  <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:menu="@menu/bottom_navigation_menu"
    app:backgroundTint="?attr/colorSurface"
    app:itemIconTint="?attr/colorOnSurface"
    app:itemTextColor="?attr/colorOnSurface"
    app:elevation="8dp"
  />
  
  <!-- Bottom Sheet for Adding Entry -->
  <LinearLayout
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:elevation="16dp"
    android:padding="24dp"
    android:visibility="gone"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
  >
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="New Entry"
      android:textAppearance="?attr/textAppearanceHeadlineMedium"
      android:layout_marginBottom="16dp"
    />
    
    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:hint="Activity"
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
    >
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addEntryActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
    </com.google.android.material.textfield.TextInputLayout>
    
    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:hint="Note (optional)"
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
    >
      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addEntryNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
    </com.google.android.material.textfield.TextInputLayout>
    
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="end"
    >
      <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Cancel"
        style="@style/Widget.Material3.Button.TextButton"
      />
      
      <com.google.android.material.button.MaterialButton
        android:id="@+id/addEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:enabled="false"
      />
    </LinearLayout>
  </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>