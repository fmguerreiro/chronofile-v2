<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:paddingHorizontal="20dp"
  android:minHeight="72dp"
  android:gravity="center_vertical"
>
  <!-- Icon Container with Timeline Line -->
  <RelativeLayout
    android:layout_width="32dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp"
  >
    <!-- Continuous vertical line -->
    <View
      android:layout_width="2dp"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true"
      android:background="?attr/colorOutline"
    />
    
    <!-- Top line cover for first item -->
    <View
      android:id="@+id/topLineCover"
      android:layout_width="2dp"
      android:layout_height="36dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentTop="true"
      android:background="?attr/colorSurface"
      android:visibility="gone"
    />
    
    <!-- Bottom line cover for last item -->
    <View
      android:id="@+id/bottomLineCover"
      android:layout_width="2dp"
      android:layout_height="36dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:background="?attr/colorSurface"
      android:visibility="gone"
    />
    
    <!-- Icon background circle -->
    <View
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_centerInParent="true"
      android:background="@drawable/timeline_dot"
    />
    
    <!-- Minimal Line Icon -->
    <ImageView
      android:id="@+id/activityIcon"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_centerInParent="true"
      android:src="@drawable/ic_briefcase_line"
      android:scaleType="center"
      app:tint="#666666"
    />
  </RelativeLayout>
  
  <!-- Content Section - Structured Block -->
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginEnd="16dp"
  >
    <!-- Activity Name -->
    <TextView
      android:id="@+id/entryActivity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceBodyLarge"
      android:textColor="?attr/colorOnSurface"
      android:textStyle="normal"
      android:layout_marginBottom="2dp"
      tools:text="Work Session"
    />
    
    <!-- Time Range -->
    <TextView
      android:id="@+id/entryTimeRange"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?attr/textAppearanceBodySmall"
      android:textColor="?attr/colorOnSurfaceVariant"
      tools:text="9:00 AM - 12:00 PM"
    />
    
    <!-- Note (if exists) -->
    <TextView
      android:id="@+id/entryNote"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:textAppearance="?attr/textAppearanceBodySmall"
      android:textColor="?attr/colorOnSurfaceVariant"
      android:maxLines="1"
      android:ellipsize="end"
      android:visibility="gone"
      tools:visibility="visible"
      tools:text="Feature development"
    />
  </LinearLayout>
  
  <!-- Duration Display -->
  <TextView
    android:id="@+id/entryDuration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?attr/textAppearanceBodySmall"
    android:textColor="?attr/colorOnSurfaceVariant"
    android:gravity="end"
    tools:text="3h"
  />
</LinearLayout>