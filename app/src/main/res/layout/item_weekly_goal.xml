<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center_vertical"
  android:padding="16dp"
  android:layout_marginBottom="12dp"
>
  <!-- Icon -->
  <androidx.cardview.widget.CardView
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:cardElevation="0dp"
  >
    <ImageView
      android:id="@+id/goalIcon"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:src="@drawable/ic_meditation"
      android:tint="@color/icon_primary"
      tools:ignore="UseAppTint"
    />
  </androidx.cardview.widget.CardView>
  
  <!-- Content -->
  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
  >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
    >
      <TextView
        android:id="@+id/goalActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.Chronofile.GoalName"
        tools:text="Meditate for 15"
      />
    </LinearLayout>
    
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginTop="4dp"
    >
      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
      >
        <TextView
          android:id="@+id/goalFrequency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/TextAppearance.Chronofile.CadenceLabel"
          tools:text="Daily"
        />
      </FrameLayout>
      
      <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="1"
        android:layout_marginEnd="12dp"
        app:indicatorColor="@color/progress_primary"
        app:trackColor="@color/progress_fill"
        app:trackCornerRadius="4dp"
        tools:progress="75"
      />
    </LinearLayout>
  </LinearLayout>
  
  <!-- Progress Percentage -->
  <TextView
    android:id="@+id/progressPercentage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/TextAppearance.Chronofile.ProgressPercentage"
    tools:text="75"
  />
  
  <!-- Action Buttons -->
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="16dp"
    android:visibility="gone"
  >
    <ImageButton
      android:id="@+id/editGoalButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:src="@android:drawable/ic_menu_edit"
      android:contentDescription="Edit goal"
      android:padding="8dp"
    />
    
    <ImageButton
      android:id="@+id/deleteGoalButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:src="@android:drawable/ic_menu_delete"
      android:contentDescription="Delete goal"
      android:padding="8dp"
    />
  </LinearLayout>
</LinearLayout>