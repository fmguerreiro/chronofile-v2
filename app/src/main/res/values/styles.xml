<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Material 3 Theme -->
  <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>
    <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
    <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
    
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorOnSecondary">@color/colorOnSecondary</item>
    <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
    <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
    
    <item name="colorTertiary">@color/colorTertiary</item>
    <item name="colorOnTertiary">@color/colorOnTertiary</item>
    <item name="colorTertiaryContainer">@color/colorTertiaryContainer</item>
    <item name="colorOnTertiaryContainer">@color/colorOnTertiaryContainer</item>
    
    <item name="colorError">@color/colorError</item>
    <item name="colorErrorContainer">@color/colorErrorContainer</item>
    <item name="colorOnError">@color/colorOnError</item>
    <item name="colorOnErrorContainer">@color/colorOnErrorContainer</item>
    
    <item name="android:colorBackground">@color/colorBackground</item>
    <item name="colorOnBackground">@color/colorOnBackground</item>
    <item name="colorSurface">@color/colorSurface</item>
    <item name="colorOnSurface">@color/colorOnSurface</item>
    <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
    <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
    
    <item name="colorOutline">@color/colorOutline</item>
    <item name="colorOutlineVariant">@color/colorOutlineVariant</item>
    
    <item name="android:fontFamily">@font/epilogue</item>
    
    <!-- Shape -->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Chronofile.SmallComponent</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Chronofile.MediumComponent</item>
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Chronofile.LargeComponent</item>
    
    <!-- Typography -->
    <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Chronofile.HeadlineLarge</item>
    <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Chronofile.HeadlineMedium</item>
    <item name="textAppearanceBodyLarge">@style/TextAppearance.Chronofile.BodyLarge</item>
    <item name="textAppearanceBodyMedium">@style/TextAppearance.Chronofile.BodyMedium</item>
    <item name="textAppearanceLabelLarge">@style/TextAppearance.Chronofile.LabelLarge</item>
    
    <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    
    <!-- Disable default activity transitions to ensure our custom ones work -->
    <item name="android:windowActivityTransitions">false</item>
    <item name="android:windowContentTransitions">false</item>
    <item name="android:windowAnimationStyle">@null</item>
  </style>
  
  <!-- Shape Appearances -->
  <style name="ShapeAppearance.Chronofile.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
  </style>
  
  <style name="ShapeAppearance.Chronofile.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">16dp</item>
  </style>
  
  <style name="ShapeAppearance.Chronofile.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">24dp</item>
  </style>
  
  <!-- Text Appearances -->
  <style name="TextAppearance.Chronofile.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge" />
  
  <style name="TextAppearance.Chronofile.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium" />
  
  <style name="TextAppearance.Chronofile.BodyLarge" parent="TextAppearance.Material3.BodyLarge" />
  
  <style name="TextAppearance.Chronofile.BodyMedium" parent="TextAppearance.Material3.BodyMedium" />
  
  <style name="TextAppearance.Chronofile.LabelLarge" parent="TextAppearance.Material3.LabelLarge" />
  
  <!-- New Typography System -->
  <!-- Section Headers: 24px, weight 700 -->
  <style name="TextAppearance.Chronofile.SectionHeader" parent="TextAppearance.Material3.HeadlineSmall">
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>
  
  <!-- Goal Names: 18px, weight 600 -->
  <style name="TextAppearance.Chronofile.GoalName" parent="TextAppearance.Material3.BodyLarge">
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>
  
  <!-- Progress Percentages: 16px, weight 700 -->
  <style name="TextAppearance.Chronofile.ProgressPercentage" parent="TextAppearance.Material3.BodyMedium">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/progress_success</item>
  </style>
  
  <!-- Percentage Trend Indicator: 18px, weight 600 -->
  <style name="TextAppearance.Chronofile.TrendIndicator" parent="TextAppearance.Material3.BodyLarge">
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/progress_success</item>
  </style>
  
  <!-- Cadence Labels: 14px, weight 400, increased letter-spacing -->
  <style name="TextAppearance.Chronofile.CadenceLabel" parent="TextAppearance.Material3.BodyMedium">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/text_hint</item>
    <item name="android:letterSpacing">0.05</item>
  </style>
  
  <!-- Trend Subtitle: 14px, weight 400 -->
  <style name="TextAppearance.Chronofile.TrendSubtitle" parent="TextAppearance.Material3.BodyMedium">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/text_hint</item>
  </style>
  
  <!-- Large Progress Display: 32px, weight 700 -->
  <style name="TextAppearance.Chronofile.LargeProgress" parent="TextAppearance.Material3.HeadlineMedium">
    <item name="android:textSize">32sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>
  
  <!-- Secondary Text: 14px, weight 400 -->
  <style name="TextAppearance.Chronofile.SecondaryText" parent="TextAppearance.Material3.BodyMedium">
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>
  
  <!-- Component Styles -->
  <style name="Widget.Chronofile.Button" parent="Widget.Material3.Button">
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="Widget.Chronofile.Button.TextButton" parent="Widget.Material3.Button.TextButton">
    <item name="android:textStyle">bold</item>
  </style>
  
  <style name="Widget.Chronofile.CardView" parent="Widget.Material3.CardView.Elevated">
    <item name="cardElevation">2dp</item>
    <item name="cardCornerRadius">16dp</item>
    <item name="cardUseCompatPadding">true</item>
  </style>
  
  <!-- Legacy compatibility -->
  <style name="AppTheme.NoActionBar" parent="AppTheme" />
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3" />
  
  <style name="MainActivityButton" parent="Widget.Chronofile.Button">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  
  <!-- Dialog Themes -->
  <style name="MyAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSurface">@color/colorSurface</item>
    <item name="colorOnSurface">@color/colorOnSurface</item>
    <item name="dialogCornerRadius">16dp</item>
  </style>
  
  <style name="MyDatePickerDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>
    <item name="colorSurface">@color/colorSurface</item>
    <item name="colorOnSurface">@color/colorOnSurface</item>
  </style>
  
  <!-- Widget Styles -->
  <style name="WidgetActivityButton">
    <item name="android:background">@drawable/widget_button_background</item>
    <item name="android:textColor">@color/widget_button_text</item>
    <item name="android:textSize">10sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">4dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>
</resources>